// Reset
@import nib
global-reset()
reset-html5()

*
  box-sizing border-box


// Local imports
@import grid


// Main site styles
html, body, #wrapper, #background
  height 100%
  min-height 100%


// Responsive stuff
buildGrid()


contentAfter($content)
  #content::after
    content $content

#content::after
  display block
  color gray
  font-size 20px

